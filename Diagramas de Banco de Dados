erDiagram
    CLIENTE ||--o{ PEDIDO : faz
    CLIENTE {
        int id
        string nome
        string email
        string endereco
    }
    PEDIDO ||--|{ ITEM_PEDIDO : contem
    PEDIDO {
        int id
        date data
        float total
        string status
    }
    PRODUTO ||--o{ ITEM_PEDIDO : inclui
    PRODUTO {
        int id
        string nome
        float preco
        int estoque
    }
    ITEM_PEDIDO {
        int pedido_id
        int produto_id
        int quantidade
        float preco_unitario
    }

