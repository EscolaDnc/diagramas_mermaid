classDiagram
    class Cliente {
        -id: int
        -nome: string
        -email: string
        +fazerPedido()
    }
    class Pedido {
        -id: int
        -data: Date
        -status: string
        +calcularTotal()
    }
    class ItemPedido {
        -quantidade: int
        -precoUnitario: float
    }
    class Produto {
        -id: int
        -nome: string
        -preco: float
        +atualizarEstoque()
    }
    Cliente "1" -- "*" Pedido : faz
    Pedido "1" *-- "*" ItemPedido : contém
    ItemPedido "*" -- "1" Produto : referencia
